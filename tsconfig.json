{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "declaration": false,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
